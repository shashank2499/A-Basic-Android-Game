<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <android.support.v7.widget.GridLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/gridLayout" android:layout_marginTop="100dp" android:layout_marginBottom="100dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp">
        <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp" app:srcCompat="@drawable/modi1" app:layout_row="0"
                app:layout_column="0" android:id="@+id/imageView1" android:onClick="increase"/>
        <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp" app:srcCompat="@drawable/modi1" app:layout_row="0"
                app:layout_column="1" android:id="@+id/imageView2" android:onClick="increase"/>
        <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp" app:srcCompat="@drawable/modi1" app:layout_row="0"
                app:layout_column="2" android:id="@+id/imageView3" android:onClick="increase"/>
        <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp" app:srcCompat="@drawable/modi1" app:layout_row="1"
                app:layout_column="0" android:id="@+id/imageView4" android:onClick="increase"/>
        <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp" app:srcCompat="@drawable/modi1" app:layout_row="1"
                app:layout_column="1" android:id="@+id/imageView5" android:onClick="increase"/>
        <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp" app:srcCompat="@drawable/modi1" app:layout_row="1"
                app:layout_column="2" android:id="@+id/imageView6" android:onClick="increase"/>
        <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp" app:srcCompat="@drawable/modi1" app:layout_row="2"
                app:layout_column="0" android:id="@+id/imageView7" android:onClick="increase"/>
        <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp" app:srcCompat="@drawable/modi1" app:layout_row="2"
                app:layout_column="1" android:id="@+id/imageView8" android:onClick="increase"/>
        <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp" app:srcCompat="@drawable/modi1" app:layout_row="2"
                app:layout_column="2" android:id="@+id/imageView9" android:onClick="increase"/>
    </android.support.v7.widget.GridLayout>
    <TextView
            android:text="TIME:10"
            android:layout_width="274dp"
            android:layout_height="48dp"
            android:id="@+id/textView" android:textStyle="bold|italic"
            android:textAlignment="center" android:textSize="36sp" android:textColor="#3F51B5"
            android:layout_marginBottom="36dp" app:layout_constraintBottom_toTopOf="@+id/gridLayout"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/gridLayout"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="SCORE:0"
            android:layout_width="314dp"
            android:layout_height="67dp"
            android:id="@+id/textView2" android:textStyle="bold|italic"
            android:textAllCaps="true" android:textAlignment="center" android:textColor="#3F51B5"
            android:textSize="36sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/gridLayout"/>
</android.support.constraint.ConstraintLayout>
